@page "/"
@inject CalculatorLogic.Calculator Calculator

<div class="container mt-4">
    <!-- Title and Clear Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Calculator</h1>
        <button class="btn btn-outline-secondary">Clear</button>
    </div>

    <!-- Instruction Section -->
    <div class="alert alert-warning text-center">
        Enter values below, then select an operation
    </div>

    <!-- Input Section -->
    <div class="mb-3">
        <label for="values" class="form-label">Values</label>
        <textarea id="values" class="form-control" rows="4"></textarea>
    </div>

    <!-- Descriptive Statistics Section -->
    <h4 class="mt-4">Descriptive Statistics</h4>
    <div class="d-grid gap-2">
        <button class="btn btn-outline-secondary">Compute Sample Standard Deviation | one value per line</button>
        <button class="btn btn-outline-secondary">Compute Population Standard Deviation | one value per line</button>
        <button class="btn btn-outline-secondary">Compute Mean | one value per line</button>
        <button class="btn btn-outline-secondary">Compute Z Score | value, mean, stdDev on one line</button>
    </div>

    <!-- Single Linear Regression Section -->
    <h4 class="mt-5">Single Linear Regression</h4>
    <div class="d-grid gap-2">
        <button class="btn btn-outline-secondary">Compute Single Linear Regression Formula | one x,y pair per line</button>
        <button class="btn btn-outline-secondary">Compute Y from Linear Regression Formula | x, m, b on one line</button>
    </div>
</div>

